@model Vidly.Models.Movie

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>영화 정보</h2>
<hr>

<h4>@Model.Name</h4>

<ul>
    <li>장르: @Model.Genre.Name</li>
    <li>등급: @Model.Rate.Name</li>
    <li>상영일자: @Model.DateAdded.ToString("yyyy/MM/dd")</li>
    <li>등록일자: @Model.ReleaseDate.ToString("yyyy/MM/dd")</li>
    <li>남아있는 갯수: @Model.Stock</li>
</ul>

