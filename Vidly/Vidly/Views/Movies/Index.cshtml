@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>영화</h2>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>영화제목</th>
                <th>장르</th>
                <th>등급</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
    {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Detail", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
                <td>@movie.Rate.Name</td>
            </tr>
}
        </tbody>
        

    </table>
</div>
